{{#if flash.message }}
    {{#ifeq flash.type "success"}}
        <div class="alert alert-success" role="alert">
    {{else}}
        {{#ifeq flash.type "danger"}}
            <div class="alert alert-danger" role="alert">
        {{else}}
            <div class="alert" role="alert">
        {{/ifeq}}
    {{/ifeq}}
        {{flash.message}}
         <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
{{/if}}
<div class="row" style="padding:30px">
    <!--left-->
    <div class="col-sm-5">
        <div>
            <table class="table table-hover">
                <thead>
                    <th class="check-all-sale-order"><span><input id="check-all" type="checkbox" value=""></span></th>
                    <th><span class="text">Number</span></th>
                    <th><span class="text">Customer</span></th>
                </thead>
            </table>
        </div>
        <div style="height:400px;overflow:auto">
            <table class="table table-hover">
                 <tbody>
                    {{#if sale_orders}}
                        {{#each sale_orders}}
                            <tr data-id="{{sale_id}}">
                                <!--check box-->
                                <td class="sale-id"><span><input type="checkbox" value="{{sale_id}}"></span></td>
                                <!--number-->
                                <td class="select-sale-order">{{number}}</td>
                                <!--customer-->
                                <td class="select-sale-order">{{customer_name}}</td>
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            Nothing sale order
                        </tr>
                    {{/if}}
                 <tbody>
            </table>
        </div>
        <!--div for button-->
        {{#if sale_orders}}
            <div style="padding-top:30px">
                <button class="btn btn-success btn-lg btn-complete-sale"><b>Complete</b></button>
            </div>
        {{/if}}
    </div> <!-- left -->
    <!--right-->
    <div class="col-sm-7">
        <div class="row">
            <div class="col-sm-6">
                <strong>Customer :</strong> {{customer_name}}
            </div>
            <div class="col-sm-6">
                <strong>Amount Total :</strong> {{amount_total}}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <strong>Phone :</strong> {{customer_phone}}
            </div>
        </div>

        <div style="padding-top:40px">
            <table class="table table-hover">
                <thead style="background-color:#6d6d6d;color:white">
                    <th>Product</th>
                    <th>Qty</th>
                    <th>UoM</th>
                    <th>Unit Price</th>
                    <th>Amount</th>
                </thead>
                <tbody>
                    {{#if sale_order}}
                        {{#each sale_order}}
                            <tr>
                                <td>{{product_name}}</td> <!--Product-->
                                <td>{{qty}}</td> <!--Qty-->
                                <td>{{uom}}</td> <!--UoM-->
                                <td>{{unit_price}}</td> <!--Unit Price-->
                                <td>{{amount}}</td> <!--Amount-->
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td>
                            Nothing detail
                            </td>
                        </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div><!-- row-->
