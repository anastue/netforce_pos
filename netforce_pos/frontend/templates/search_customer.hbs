<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="font-size:200%">&times;</span></button>
            <h4 class="modal-title">Search Customer</h4>
        </div>
        <div class="modal-body">
            {{#if flash.message }}
                <div class="row" style="margin:5px;">
                    {{#ifeq flash.type "success"}}
                        <div class="alert alert-success" role="alert">
                    {{else}}
                        {{#ifeq flash.type "danger"}}
                            <div class="alert alert-danger" role="alert">
                        {{else}}
                            <div class="alert" role="alert">
                        {{/ifeq}}
                    {{/ifeq}}
                    {{flash.message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                </div>
            {{/if}}
            <!--input for search-->
            <div class="row" style="padding:5%">
                <div class="input-group" style="padding-top:10px">
                    <input placeholder="Search Customer" value="{{input}}" type="text" id="popup-search-customer" class="form-control" style="height:35px;">
                        <span class="input-group-addon btn btn-popup-search-customer" style="cursor:pointer">
                        <span class="glyphicon glyphicon-search"></span>
                    </input>
                </div>
            </div>
            <!--table for header-->
            {{#if contacts}}
                <div class="panel-body" style="padding:0px;">
                    <table class="table table-hover" style="margin:0px;">
                        <thead style="background-color:#6d6d6d;color:white">
                            <th>Name</th>
                            <th>Phone</th>
                        </thead>
                    </table>
                </div>
            {{/if}}
            <!--table for body-->
            <div class="panel-body" style="padding:0px;height:200px; overflow-y:auto;">
                <table class="table table-hover" style="margin:0px;">
                    <!--<thead style="background-color:#6d6d6d;color:white">-->
                    <!--<th>Name</th>-->
                    <!--<th>Phone</th>-->
                    <!--</thead>-->
                    <tbody>
                        {{#if contacts}}
                            {{#each contacts}}
                                <tr class="select-contact" data-id="{{id}}">
                                    <td>{{name}}</td>
                                    <td>{{phone}}</td>
                                </tr>
                            {{/each}}
                        {{/if}}
                    </tbody>
                </table>
            </div>
        <!--modal body-->
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-cancel">Cancel</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
